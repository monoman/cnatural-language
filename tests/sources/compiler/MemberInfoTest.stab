			var typeSystem = new Library(new String[] { alPath, rtPath });
			var mapType = typeSystem.getType("java/util/Map");
			var indexers = MemberInfo.getIndexers(typeSystem, mapType, 1);
			
			Assert.assertEquals(1, indexers.count());
			
