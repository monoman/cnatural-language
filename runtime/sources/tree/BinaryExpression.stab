using java.lang;

package stab.tree {

    public enum BinaryOperator {
		Add,
        AddAssign,
		And,
        AndAssign,
        Assign,
		Divide,
        DivideAssign,
        Element,
		Equal,
		GreaterThan,
		GreaterThanOrEqual,
		LeftShift,
        LeftShiftAssign,
		LessThan,
		LessThanOrEqual,
		LogicalAnd,
		LogicalOr,
		Modulo,
        ModuloAssign,
		Multiply,
        MultiplyAssign,
		NotEqual,
		NullCoalescing,
		Or,
        OrAssign,
		RightShift,
        RightShiftAssign,
		Subtract,
        SubtractAssign,
		UnsignedRightShift,
		UnsignedRightShiftAssign,
		Xor,
        XorAssign
    }

    public class BinaryExpression : Expression {
        BinaryExpression(Class<?> type, BinaryOperator operator, Expression left, Expression right)
            : super(ExpressionKind.Binary, type) {
            this.Operator = operator;
            this.Left = left;
            this.Right = right;
        }
        
        public BinaryOperator Operator {
            get;
            private set;
        }
        
        public Expression Left {
            get;
            private set;
        }
        
        public Expression Right {
            get;
            private set;
        }
    }
}
